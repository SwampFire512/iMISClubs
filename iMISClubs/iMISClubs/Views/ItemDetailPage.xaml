<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="iMISClubs.Views.ItemDetailPage"
             Title="{Binding Title}">
    <StackLayout Spacing="20" Padding="15">
        <Label Text="Full name:" FontSize="Medium" />
        <Label Text="{Binding Member.FullName}" FontSize="Small"/>
        <Label Text="Nick name:" FontSize="Medium" />
        <Label Text="{Binding Member.Description}" FontSize="Small"/>
    </StackLayout>
</ContentPage>